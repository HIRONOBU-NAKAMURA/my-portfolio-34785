<%= form_with(url: search_my_accounts_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "ユーザーを検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn btn btn-primary" %>
<% end %>
<div class="contents row">
  <% @users.each do |user| %>
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for user %>
          <%= link_to user.name, my_account_path(user) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
